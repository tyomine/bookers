<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error has occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

<h6>title</h6>
<%= f.text_field :title %>

<h6>body</h6>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
<% end %>
