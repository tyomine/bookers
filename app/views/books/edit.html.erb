<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error has occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

<h4>title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_area :body %>

<div><%= f.submit 'Update Book' %></div>

<%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
<% end %>
